<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval" android:thicknessRatio="2" android:useLevel="true">
                    <gradient android:angle="180" android:endColor="@color/transparent_graylight" android:startColor="@color/transparent_graylight" android:type="linear" />
                    <corners android:radius="200dp" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="oval" android:thicknessRatio="2" android:useLevel="true">
                    <corners android:radius="200dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval" android:thicknessRatio="2" android:useLevel="true">
                    <gradient android:angle="180" android:endColor="@color/transparent_graylight" android:startColor="@color/transparent_graylight" android:type="linear" />
                    <corners android:radius="200dp" />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="1dp" android:right="1dp">
                <shape android:shape="oval" android:thicknessRatio="2" android:useLevel="true">
                    <corners android:radius="200dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>