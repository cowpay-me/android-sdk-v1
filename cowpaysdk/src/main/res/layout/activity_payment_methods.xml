<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="15dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_payment"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textColor="@color/davygrey"
                    android:fontFamily="@font/the_northern_block_acrom_bold"
                    android:textSize="18dp"
            />

            <LinearLayout
                    android:id="@+id/layoutCreditCardPaymentMethodsActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:background="@drawable/layout_bg_transparent_gray_selector_with_bg_transparent"
            >
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/credit_icon"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/debit_credit_card"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/davygrey"
                        android:fontFamily="@font/the_northern_block_acrom_medium"
                        android:textSize="12dp"
                />
            </LinearLayout>

            <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
            />

            <LinearLayout
                    android:id="@+id/layoutFawryPaymentMethodsActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:background="@drawable/layout_bg_transparent_gray_selector_with_bg_transparent">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/fawry_icon"/>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fawry_service"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/davygrey"
                        android:fontFamily="@font/the_northern_block_acrom_medium"
                        android:textSize="12dp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/powered_by"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/sealbrown"
                    android:fontFamily="@font/the_northern_block_acrom_medium"
                    android:textSize="10dp"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/logo_black_icon"
                       android:layout_marginStart="12dp"/>

        </LinearLayout>
    </RelativeLayout>
</layout>